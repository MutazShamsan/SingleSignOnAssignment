@model SSO.DataModel.LoginRequsetModel

@using (Ajax.BeginForm("Login", "Login", new AjaxOptions
{
    HttpMethod = "POST",
}, new { id = "login-form" }))
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", name = "username", id = "username", tabindex = "1", placeholder = "Username" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", name = "password", id = "password", tabindex = "2", placeholder = "Password" })
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
            </div>
        </div>
    </div>
}
