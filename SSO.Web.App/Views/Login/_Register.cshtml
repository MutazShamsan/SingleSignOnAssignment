@model  SSO.DataModel.RegistrationRequestModel

@using (Ajax.BeginForm("Register", "Login", new AjaxOptions
{
    HttpMethod = "POST",
}, new { style = "display: none;", id = "register-form" }))
{
    @*@Html.AntiForgeryToken()*@
    <div class="form-group">
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", name = "username", id = "username", tabindex = "1", placeholder = "Username" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", name = "fullname", id = "fullname", tabindex = "1", placeholder = "FullName" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.UserLevel, new SelectList(new List<SelectListItem> { new SelectListItem { Text = "Admin", Value = "1" }, new SelectListItem { Text = "Normal", Value = "2" } }, "Value", "Text"), new { @class = "form-control", name = "userLevel", id = "userLevel", tabindex = "1", placeholder = "userLevel" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", name = "password", id = "password", tabindex = "2", placeholder = "Password" })
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
            </div>
        </div>
    </div>
}
